<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="NoteModel"
            type="com.karamlyy.noteapp.model.NoteModel" />

        <variable
            name="NoteClickListener"
            type="com.karamlyy.noteapp.ui.home.NoteClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> NoteClickListener.onNoteClick(NoteModel.id)}"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/item_home_fragment_note_title"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                tools:text="Note Title"
                android:text="@{NoteModel.title}"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintBottom_toBottomOf="@+id/item_home_fragment_note_image_view"
                app:layout_constraintEnd_toStartOf="@+id/item_home_fragment_note_checkbox"
                app:layout_constraintStart_toEndOf="@+id/item_home_fragment_note_image_view"
                app:layout_constraintTop_toTopOf="@+id/item_home_fragment_note_image_view" />

            <TextView
                android:id="@+id/item_home_fragment_note_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{NoteModel.description}"
                style="@style/TextAppearance.Material3.BodyLarge"
                tools:text="@tools:sample/lorem/random"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_home_fragment_note_checkbox"
                app:layout_constraintStart_toStartOf="@+id/item_home_fragment_note_title"
                app:layout_constraintTop_toBottomOf="@+id/item_home_fragment_note_title" />

            <CheckBox
                android:id="@+id/item_home_fragment_note_checkbox"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:onClick="@{() -> NoteClickListener.onNoteChecked(NoteModel)}"
                style="?android:attr/starStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/item_home_fragment_note_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:tint="@color/seed"
                setItemNotePriorityTint="@{NoteModel.priority}"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_circle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
